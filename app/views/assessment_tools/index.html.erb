<div id="content-header">
  <%= stylesheet_link_tag("observation_groups/show.css") %>
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('weightages_text') %></h1>
  <h3><%= t('new_text') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li>
      <%= link_to_remote "#{t('new_text')}", :url => { :action => 'new', :id => @descriptive.id } %>
    </li>
  </ul>
</div>

<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>
  <div class="bread_crumb">
    <% if @descriptive.describable_type == "Observation" %>
      <%= link_to t('observation_groups'), observation_groups_path %> &raquo;
      <%= link_to @observation_group.name, observation_group_path(@observation_group) %> &raquo;
      <%= link_to @describable.name, observation_descriptive_indicators_path(@describable) %> &raquo;
    <% else %>
      <%= link_to t('fa_groups'), fa_groups_path %> &raquo;
      <%= link_to @fa_group.name, fa_group_path(@fa_group) %> &raquo;
      <%= link_to @describable.fa_name, fa_criteria_descriptive_indicators_path(@describable) %> &raquo;
    <% end %>
    <%= @descriptive.name %>
  </div>
  <div class="title">
    <%= t("name") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @descriptive.name %></div>
  </div>
  <div class="title">
    <%= t("desc_text") %>
    <div class="description">:&nbsp;&nbsp;&nbsp;<%= @descriptive.desc %></div>
  </div>
  <div id="assessment_tools">
    <%= render  :partial=>'assessment_tools' %>
  </div>
  <div id="modal-box" style="display:none;"></div>
</div>