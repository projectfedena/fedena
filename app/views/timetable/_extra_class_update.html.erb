<%  @config = Configuration.available_modules %>
<% timing = ClassTiming.find(@period.class_timing_id) %>
<% subject = Subject.find(@period.subject_id) unless @period.subject.nil? %>
 <div class="category-num"><%= timing.name %></div>

 <div class="category-name"><%= subject.name unless subject.nil? %></div>
  <% if @config.include?('HR') %>
 <div class="category-emp"><%= @period.employee.first_name unless @period.employee_id.nil? %></div>
<% end  %>
 <div class="category-edit"><%= link_to_remote("#{t('layouts.default.edit')}", :url => {:action=>'extra_class_edit', :id=>@period.id})  %></div>