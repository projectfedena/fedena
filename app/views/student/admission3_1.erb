<div id="content-header">
<%= image_tag("/images/admission/admission_page_logo.jpg") %>
  <h1><%= t('admission') %></h1>
  <h3><%= t('emergency_contact_step3') %></h3>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <p class="flash-msg"><%= t('select_one_of_the_guardians') %></p>

  <% form_for :immediate_contact do |f| %>
    <ul id="parents-list">
      <%- @parents.each do |p| -%>
        <li class="list<%=cycle('odd', 'even')%>">
          <% if p.immediate_contact? %>
            <%= f.radio_button "contact", p.id, :checked => 'checked' %> <%= p.full_name %>
          <% else %>
            <%= f.radio_button "contact",p.id %> <%= p.full_name %>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div id="submit-button"><%= submit_tag "" , :value => "â–º #{t('finish')}", :id => 'finish-button' %></div>
  <% end %>
</div>