<div id="content-header">
<%= image_tag("/images/show_finance.png") %>
  <h1><%= t('transactions') %></h1>
  <h3><%= t('monthly_transactions') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">
  <% form_for :report, :url => {:action => 'update_monthly_report'} do |form| %>
    <div class="label-field-pair">
      <label><%= t('select_start_date') %>:</label>
      <div class="input-container"><%= calendar_date_select_tag 'start_date', I18n.l(Date.today,:format=>"%e-%m-%Y") ,:popup=>:force%></div>
    </div>
    <div class="label-field-pair">
      <label><%= t('select_end_date') %>: </label>
      <div class="input-container"><%= calendar_date_select_tag 'end_date', I18n.l(Date.today,:format=>"%e-%m-%Y") ,:popup=>:force%></div>
    </div>

         <%=  submit_tag "â–º #{t('monthly_report')}",:class=>'submit_button' %>
  <%end%>
</div>
</div>


