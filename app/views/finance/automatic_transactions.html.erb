<div id="content-header">
  <%= image_tag("/images/show_finance.png") %>
  <h1><%= t('finance_text') %></h1>
  <h3><%= t('automatic_transactions') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">
    <div class="link-heading">
      <%= link_to_function("#{t('create_text')}") { |page|
        page.replace_html 'modal-box', :partial => 'transaction_trigger_create_form'
        page << "Modalbox.show($('modal-box'), {title: '', width: 500});"
      } %>
      <div class="link-descr"><%= t('create_auto_transaction') %></div>
    </div>
    <div class="link-descr"></div>
    <div id="transaction-triggers-list">
      <%= render :partial => "transaction_triggers_list" %>
    </div>

    <div id="modal-box" style="display:none;"></div>
  </div>
</div>