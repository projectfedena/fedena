<div id="page-yield">

  <div class="hor_line"></div>
  <h2><%= t('finance_transaction_report') %></h2>
  <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">
    <div id ="main_info">
      <h4> <%= "#{t('from')} ( #{@start_date}) #{t('to')} ( #{@end_date})" %></h4>
    </div>
    <div id="pdf-info">
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header"><td class="col-pdf"><%= t('sl_no') %></td><td class="col-pdf"><%= t('particulars') %></td><td class="col-pdf"><%= "#{t('expenses')}( #{currency})" %></td><td class="col-pdf"><%=  "#{t('income')}( #{currency})" %></td></tr>
        <%  index = 0 %>
        <% i = 0 %>
        <% income_total = 0 %>
        <% expenses_total = 0 %>
        <% c= 'even' %>
        <%  unless @hr.nil? %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"><%= index+=1 %></td>
            <td class="col-pdf"><%= t('salary') %></td>
            <td class="col-pdf">&nbsp;<%= @salary %></td>
            <td class="col-pdf"></td>
          </tr>
          <% i+= 1 %>
        <% end %>
        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
          <td class="col-pdf"><%= index+=1 %></td>
          <td class="col-pdf"><%= t('donations') %></td>
          <td class="col-pdf"></td>
          <td class="col-pdf">&nbsp;<%= @donations_total %></td>
        </tr>
        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
          <td class="col-pdf"><%= index+=1 %></td>
          <td class="col-pdf"><%= t('fees_account') %></td>
          <td class="col-pdf"></td>
          <td class="col-pdf">&nbsp;<%= @transactions_fees %></td>
        </tr>
        <% FedenaPlugin::FINANCE_CATEGORY.each do |category| %>
      <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
        <td class="col-pdf"><%= index+=1 %></td>
          <td class="col-pdf"><%= "#{t(category[:category_name]+'_account')}"%> </td>
         <td class="col-pdf"></td>
        <td class="col-pdf"><%=  @category_transaction_totals["#{category[:category_name]}"]%></td>
      </tr>
      <% end %>
      <% i+= 2 %>
        <%  @other_transactions.each_with_index do |t,i| %>
            <% if i == 19 %>
              <% i= 0 %>
              <% c= 'even' %>
              <tr class="page-break"><td colspan="3"></td></tr>
              <tr class="table-header"><td class="col-pdf"><%= t('sl_no') %></td><td class="col-pdf"><%= t('particulars') %></td><td class="col-pdf"><%= "#{t('expenses')}( #{currency})" %></td><td class="col-pdf"><%=  "#{t('income')}( #{currency})" %></td></tr>
            <% end %>
          <% if t.category.is_income? %>
            <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
              <td class="col-pdf"><%= index+=1 %></td>
              <td class="col-pdf"> <%= t.title %> </td>
              <td class="col-pdf"></td>
              <td class="col-pdf">&nbsp;<%= t.amount %></td>
            </tr>
            <% i+= 1 %>
            <% income_total +=t.amount %>
          <% else %>
            <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
              <td class="col-pdf"><%= index+=1 %></td>
              <td class="col-pdf"> <%= t.title %> </td>
              <td class="col-pdf">&nbsp;<%= t.amount %></td>
              <td class="col-pdf"></td>
            </tr>
            <% i+= 1 %>
            <% expenses_total +=t.amount %>
          <% end %>
        <% end %>
        <% if @grand_total >= 0 %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"></td>
            <td class="col-pdf1"><%= t('grand_total') %></td>
            <td class="col-pdf"></td>
            <td class="col-pdf">&nbsp;<%= @grand_total %></td>
          </tr>

        <%  else %>
          <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
            <td class="col-pdf"></td>
            <td class="col-pdf1"><%= t('grand_total') %></td>
            <td class="col-pdf">&nbsp;<%= @grand_total * -1 %></td>
            <td class="col-pdf"></td>
          </tr>

        <% end %>

      </table>
    </div>

  </div>

</div>