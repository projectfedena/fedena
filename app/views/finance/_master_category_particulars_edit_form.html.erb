<label class="head_label">Edit Particular for Master fees category<span></span></label>


<div id="grading-levels-form">

  <% form_remote_for  @finance_fee_particulars,:url=>{:action=>'master_category_particulars_update',:id => @finance_fee_particulars.id}  do |f| %>

    <div id="form-errors"></div>

    <div class="label-field-pair">
      <div class="label-container"> <%= f.label :"#{t('layouts.common.name')}" %></div>
      <div class="input-container"><%= f.text_field :name %></div>
    </div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label :"#{t('layouts.common.description')}" %></div>
      <div class="input-container"><%= f.text_field :description %></div>
    </div>
    <div class="label-field-pair2">
      <div class="label-container2"><label><%= t('master_fees.create_using') %></label></div>
      <div class="input-container2">
        <%= radio_button("particulars","select","all",:checked => true) %><%= t('layouts.common.all') %><br />
        <%= radio_button("particulars","select","category",
          {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
            :with => "'select_value='+value")}"}) %> <%= t('layouts.common.student') %> <%= t('layouts.common.category') %>

      </div>
    </div>


    <div id="student"></div>

    <div class="label-field-pair">
      <div class="label-container"><%= f.label :"#{t('layouts.common.amount')}" %></div>
      <div class="input-container"> <%= f.text_field :amount %></div>
    </div>


    <%=  submit_tag "â–º #{t('layouts.common.update')}",:class=>'submit_button' %>


  <% end %>
</div>
