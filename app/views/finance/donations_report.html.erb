<div id="content-header">
  <img src="/images/show_finance.png" alt="" />
  <h1><%= t('finance_monthly_report') %></h1>
  <h3><%= t('donations') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <%donations_total=0%>
  <%donations_income=0%>
  <%donations_expenses=0%>
  <table id="listing">
    <tr class="tr-head">
      <td><%= t('description') %></td>
      <td><%= t('expense') %></td>
      <td><%= t('income') %></td>
      <td><%= t('date') %></td>
    </tr>
    <% @donations.each do |d| %>
      <tr class="tr-<%= cycle('even','odd') %>">
        <td class="col-2"><%=d.title %></td>
        <% if d.master_transaction_id == 0  %>
          <td></td>
          <td class="col-2"><%=d.amount %></td>
        <% else %>
          <td class="col-2"><%=d.amount.to_f %></td>
          <td></td>
        <% end %>
        <td class="col-2"><%=d.transaction_date.strftime("%m-%d-%Y") %></td>
      </tr>
