      <td><%= t('total') %></td>
      <%= '<td></td>' if donations_income > donations_expenses %>
      <td <%='colspan="2"' if donations_income<donations_expenses%> ><%=donations_total%></td>
        <td></td>
    </tr>

  </table>
</div>
