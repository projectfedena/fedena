<div class="pdf-report">
  <%= link_to t('layouts.default.pdf_report'), :controller=>"employee", :action=>"employee_individual_payslip_pdf", :id=>@emp.id, :id2=>@salary_date, :format=>'pdf', :target=>"_blank" %>
</div>

<% if @approve == false and @rejected == false%>
  <div id="submit-button" class ="approve">
    <%= link_to t('employee.hr.approve'), {:controller=>"finance", :action=>"employee_payslip_approve",:id =>@employee.id,:id2 => @salary_date } %>
  </div>
  <div id="submit-button" class ="approve">
    <%= link_to_remote "#{t('layouts.default.reject')}",:url=>{:controller => "finance", :action => "employee_payslip_reject_form", :id=> @emp.id, :id2=>@salary_date}, :confirm=>"Are you sure?" %>
  </div>
  
<% else %>
  <div id="submit-button" class ="approved">
    <%= "#{t('finance_payslip_index.payslip_approved')}" if @approve == true %>
    <%= "#{t('finance_payslip_index.payslip_rejected')}" if @rejected == true %>
  </div>

<% end %>

