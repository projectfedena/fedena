<div id="content-header">
   <img src="/images/show_finance.png" alt="" />
  <h1>Fees Defaulters</h1>
  <h3>Students with fee dues </h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>
  <% form_for :fees_defaulters do %>
    <div id="batchs1">
      <div class="label-field-pair">
        <label>Select a batch: </label>
      <div class="text-input-bg"> <%= select :fees_defaulters, :batch_id, @batchs.map { |c| [c.full_name, c.id] },
          {:prompt => "Select a batch"},
          {:onChange => "#{remote_function(:url => {:action => "update_fees_collection_dates_defaulters"}, :with => "'batch_id='+value")}"}%> </div>
    </div>
<div class="label-field-pair">
        <label>Select fee collection date: </label>
    <div class="text-input-bg"> <div id="fees_collection_dates"> <%= render :partial => "fees_collection_dates_defaulters"  %> </div> </div>
</div>
  <% end %>

