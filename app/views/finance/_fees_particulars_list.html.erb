<% unless @finance_fee_particulars_list.empty? %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td><%= t('layouts.default.sl_no') %></td>
      <td><%= t('master_fees.particulars') %></td>
      <td><%= t('layouts.default.student') %> <%= t('layouts.default.category') %></td>
      <td><%= t('layouts.default.admission_number') %></td>
      <td><%= t('layouts.default.amount') %></td>
      <td><%= t('layouts.default.created') %> <%= t('layouts.default.date') %></td>
      <td></td>

    </tr>
    <tr class="tr-blank"></tr>
    <% @finance_fee_particulars_list.each_with_index do |fees, i| %>
      <tr class="tr-<%= cycle("odd","even") %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-3"><%= shorten_string(fees.name,20) %></td>
        <td class="col-3"><%= StudentCategory.find(fees.student_category_id).name unless fees.student_category_id.nil? %></td>
        <td class="col-3">
          <%unless fees.admission_no.nil?%>
            <%  student =  Student.find_by_admission_no(fees.admission_no)%>
            <%= student.nil? ? "#{t('layouts.default.n_a')}" : student.full_name %>
          <% else %>
          -
          <% end %>
        </td>
        <td class="col-1" align="right"><%= fees.amount%></td>
        <td class="col-3"><%= fees.created_at.strftime("%m-%d-%Y") %></td>
        <td class="col-1">
          <%  unless @additional_category.check_fee_collection_for_additional_fees == false %>
            <span class="small"> <%= link_to_remote t('layouts.default.delete'),:confirm=>"#{t('')}", :url => { :action => 'add_particulars_delete',:id => fees.id} %></span>
          <% else %>
            <span class="small-strike"><%= t('layouts.default.delete') %></span>
          <% end %>
          <span class="small"> <%= link_to_remote t('layouts.default.edit'), :url => { :action => 'add_particulars_edit',:id => fees.id} %></span>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <%= t('add_particulars.no_particulars') %>
<% end %>
