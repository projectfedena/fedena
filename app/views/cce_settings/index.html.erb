<% content_for :head do  %>
  <%= stylesheet_link_tag 'exam/index.css' %>
<% end %>
<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1>CCE Settings</h1>
  <h3>Home</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">

    <% if FedenaConfiguration.find_by_config_key("CCE").config_value=="1" %>
      <div class="link-box">
        <div class="link-heading"><%= link_to t("basic_settings"),:action=>'basic' %></div>
        <div class="link-descr"><%= t("basic_setting_descr") %></div>
      </div>
      <div class="link-box">
        <div class="link-heading"><%= link_to t("co_scholastic_settings"),:action=>'co_scholastic' %></div>
        <div class="link-descr"><%= t("co_scholastic_setting_descr") %></div>
      </div>
      <div class="link-box">
        <div class="link-heading"><%= link_to t("scholastic_settings"),:action=>'scholastic' %></div>
        <div class="link-descr"><%= t("scholastic_setting_descr") %></div>
      </div>
    <% end %>
    <div class="extender"></div>
  </div>
</div>
