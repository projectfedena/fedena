<div id="content-header">
<%= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('exams_text') %></h1>
  <h3><%= t('ranking_level_report') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">

    <% form_for :ranking_level_report, :url=>{:action=>'student_ranking_level_report'} do |x| %>
    <div class="label-field-pair">
        <label for="student_course"><%= t('select_mode') %>:</label>
        <div  class="text-input-bg">
          <%= select :ranking_level_report, :mode,
            [["#{t('course_wise')}","course"],["#{t('batch_wise')}","batch"]],
            {:prompt => "select a mode"}, {:onChange => "#{remote_function(:url => {:action => "select_mode"}, :with => "'mode='+value")}"}%></div></div>
    <div id="course-batch"></div>
      <%= submit_tag "", :value => "â–º #{t('view')}", :class => "submit_button" %>
    <% end %>
    <div class="extender"></div>
  </div></div>