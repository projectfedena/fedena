<% remote_form_for :batch_group,:url=>{:action=>"update_batch_group", :id=>@batch_group.id} do |c| %>

  <div id="form-content">
    <div class="label-field-pair">
      <label for="name">Name</label>
      <div class="text-input-bg"><%= c.text_field :name %></div>
    </div>
    <div class="grades">
      <div class="label-field-pair">
        <label for="configuration_grading_systems">Select Batches :</label>
      </div>
      <div class="fee_category_scroll">
        <div class="sel-list">
          <%= t('select') %>: <%= link_to_function t('all'), "$$('input.batches_box').each(function(checkbox) { checkbox.checked = true; });" %>,
          <%= link_to_function t('none'), "$$('input.batches_box').each(function(checkbox) { checkbox.checked = false; });" %>
        </div>
        <% @batches.each do |b| %>
          <div class="each_batch">
            <%= check_box_tag "batch_ids[]", b.id,(GroupedBatch.exists?(:batch_id=>b.id,:batch_group_id=>@batch_group.id)),:class=>'batches_box' %> <%= b.name %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="extender"></div>

    <div id="submit-button">
      <%=submit_tag("â–º Save") %>
    </div>


  </div>
<% end %>