<div id="content-header">
  <%= image_tag("/images/sms/sms_icon.png") %>
  <h1><%= t('sms_text') %></h1>
  <h3><%= t('messages') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td><%= t('sms_messages') %></td><td><%= t('total_sms_sent') %> : <%= @total_sms %></td>
      </tr>
      <tr class="tr-blank"></tr>
      <% @sms_messages.each do |sms| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-4"><%= link_to sms.body, { :action=> 'show_sms_logs', :id=>sms.id} %></td>
          <td class="col-7"><%= sms.created_at.strftime("%A, %d. %B %Y, %H:%M") %></td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate @sms_messages %>
  </div>
</div>
