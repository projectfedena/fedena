<div id="content-header">
  <%= image_tag("/images/sms/sms_icon.png") %>
  <h1><%= t('sms_text') %></h1>
  <h3><%= t('logs') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td colspan="3"><%= t('sms_log_for') %> - <%= @sms_message.body %></td>
      </tr>
      <tr class="tr-head">
        <td><%= t('mobile') %></td>
        <td><%= t('gateway_response') %></td>
        <td><%= t('sent_at') %></td>
      </tr>
      <tr class="tr-blank"></tr>
      <% @sms_logs.each do |log| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-5">
            <%= log.mobile %>
          </td>
          <td class="col-4">
            <%= log.gateway_response %>
          </td>
          <td class="col-7">
            <%= log.created_at.strftime("%A, %d. %B %Y, %H:%M") %> <br/>
          </td>
        </tr>
      <% end %>
    </table>

    <%= will_paginate @sms_logs %>

  </div>
</div>
