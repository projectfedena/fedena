<div id="content-header">
  <img src="/images/examination/show_exam.png" alt="Exam" />
  <h1>Courses</h1>
  <h3>New Batch</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <div class="bread_crumb">
      <%= link_to 'Courses', courses_path %> &raquo;
      <%= link_to @course.full_name, @course %> &raquo;
      New batch
    </div>

    <% form_for [@course, @batch] do |f| %>
      <%= f.error_messages  %>
      <div class="label-field-pair">
        <div class="label-container"><%= f.label :name %></div>
        <div class="input-container"><%= f.text_field :name %></div>
      </div>


      <div class="label-field-pair">
        <div class="label-container"><%= f.label :start_date %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[start_date]', Date.today %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><%= f.label :end_date %></div>
        <div class="input-container"><%= calendar_date_select_tag 'batch[end_date]', Date.today + 1.year %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><label>Import previous batch Subjects</label></div>
        <div class="input-container"><%= check_box_tag 'import_subjects',"0",false %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container"><label>Import previous batch Master fees</label></div>
        <div class="input-container"><%= check_box_tag 'import_fees',"0",false %></div>
      </div>

      <%= submit_tag "", :value => "â–º Save", :class => "submit_button" %>

    <% end %>

    <div class="extender"></div>

  </div></div>
