<%- week = @weekdays.map(&:weekday) %>

<% form_for(:weekday, :url => { :action=> 'create' }) do |f| %>
  <ul id="category-list">
    <% batch_id = (@b.nil? ? nil : @b.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>
    <% Weekday::WEEKDAYS.each do |num, text| %>
      <li class="list<%=cycle('odd','even') %>">
        <div class="category-name"><%= text %></div>
        <div class="category-edit"><%= check_box_tag 'weekdays[]', num, week.include?(num) %></div>
      </li>
    <% end %>
  </ul>
  <%= submit_tag "â–º #{t('save')}", :confirm => "#{t('alter_message')}", :class => 'submit_button' %>
<% end %>

