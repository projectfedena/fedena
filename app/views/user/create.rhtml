<div id="content-header">
  <img src="/images/user_profile/user_profile_logo.jpg" />
  <h1><%= t('create.create_user') %></h1>
  <h3><%= t('create.add_new_user') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :user do |f| %>

    <%= f.error_messages %>

    <div id="create_user_form">

        <div id="necessary-field-notification"> <%= t('student.admission1.legend1') %> <span class="necessary-field">*</span> <%= t('student.admission1.legend2') %></div>

      <div class="label-field-pair">
        <label for="user_username"><%= t('layouts.default.username') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.text_field :username %></div>
      </div>

      <div class="label-field-pair">
        <label for="user_first_name"><%= t('student.admission1.first_name') %></label>
        <div class="text-input-bg"><%= f.text_field :first_name %></div>
      </div>

      <div class="label-field-pair">
        <label for="user_last_name"><%= t('student.admission1.last_name') %></label>
        <div class="text-input-bg"><%= f.text_field :last_name %></div>
      </div>

      <div class="label-field-pair">
        <label for="user_password"><%= t('login.password') %><span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.password_field :password %></div>
      </div>

      <div class="label-field-pair">
        <label for="user_email"><%= t('student.admission1.email') %> <span class="necessary-field">*</span></label>
        <div class="text-input-bg"><%= f.text_field :email %></div>
      </div>

      <div class="label-field-pair">
        <label for="user_user_role"><%= t('index.role') %></label>
        <div class="text-input-bg"> <%= select :user, :role,
            ['Admin', 'Employee'] %> </div>
      </div>

      <div class="extender"></div>

      <%= submit_tag "", :value => "â–º #{t('layouts.default.create')}", :class => "user_submit_button" %>

    </div>

  <% end  %>

</div>
