<label class="head_label"><%= t('edit_class_timing_for') %>
  <span>
    <% if @batch.nil?%>
      <%= t('common') %>
    <% else %>
      <%=  @batch.full_name %>
    <% end %>
  </span></label>

<div id="ajax-edit">

  <% form_remote_for @class_timing do |f| %>
    <div id="form-errors"></div>

    <div class="label-field-pair">
      <label for="name"><%= t('name') %></label>
      <div class="text-input-bg"><%= f.text_field :name %></div>
    </div>

    

    <div class="label-field-pair">
      <label for="name"> <%= t('start_time') %> </label>
    <div class="time-select-field"><%= time_select :class_timing, :start_time, {:minute_step => 5} %></div>
    </div>

    <div class="label-field-pair">
      <label for="name"><%= t('end_time') %></label>
    <div class="time-select-field"><%= time_select :class_timing, :end_time, {:minute_step => 5} %></div>
    </div>

    <div class="label-checkbox-pair">
      <% if @class_timing.is_break %>
      <label><%= f.check_box :is_break, :checked => true %><%= t('is_a_break') %></label>
      <% else %>
      <label><%= f.check_box :is_break, :checked => false %><%= t('is_a_break') %></label>
      <% end %>
    </div>

    <%= submit_tag "â–º #{t('save')}", :class => 'submit-button' %>


  <% end %>
</div>
